<div class="container-fluid" style="padding: 0 0;">
  <div class="show-banner">
    <div class="col-12 text-center">
      <h2>
        <% if Time.now >= Time.parse("0:01") && Time.now <= Time.parse("12:00") %>
          <i class="fas fa-coffee mr-2"></i>Good Morning, <%= current_user.first_name %>
        <% elsif Time.now >= Time.parse("12:01") && Time.now <= Time.parse("17:00") %>
          <i class="fas fa-sun mr-2"></i>Good Afternoon, <%= current_user.first_name %>
        <% else %>
          <i class="fas fa-cloud-moon mr-2"></i>Good Evening, <%= current_user.first_name %>
        <% end %>
      </h2>
    </div>
    <div class="d-flex justify-content-end pr-2"><p><i class="fas fa-igloo mr-2"></i>Meguro Mansion</p></div>
  </div>

  <div class="d-flex justify-content-between">
      <% @users.each do |user| %>
    <div class="flip-box">
      <div class="flip-box-inner">
        <div class="flip-box-front">
           <i><%= cl_image_tag user.image.key, class: :avatarlg %></i>
        </div>
        <div class="flip-box-back" >
          <%= link_to user_path(user), class: 'avatar-room-number' do  %>
            <p>Room <%= user.room.number %></p>
          <% end %>
        </div>
    </div>
     <% end %>
  </div>
   
</div>

<div class="container">

  <hr>

  <div class="row justify-content-center my-3">
    <div class="col-12">
      <div class="whiteboard-card">
        <div class="card-header text-center">
          <h3>Whiteboard</h3>
        </div>
        <div class="card-body">
          <%= render 'whiteboard_messages/index', whiteboard_message: @whiteboard_message %>
        </div>
      </div>
    </div>
  </div>

  <hr>

  <div class="row justify-content-center my-3">
    <div class="col-12">
      <div class="card wide-container">
        <div class="card-header text-center">
          <h4>Your Chores</h4>
          <a href="chores" class="stretched-link"></a>
        </div>
        <div class="card-body" id="chores">

          <div class="d-flex justify-content-around">
            <div>
              <div class="other-week border p-3 d-flex flex-column">
                <p class="mr-3"><strong>Last Week:</strong></p>
                <p class="mr-3"><%= @previous_room_chore.chore.name %></p>
                <% if @previous_room_chore.status %>
                  <small class="mr-3">+10 pts earned</small>
                <% else %>
                  <small class="mr-3">0 pts earned</small>
                <% end %>
              </div>
            </div>

            <div>
              <div class="this-week border p-3 d-flex flex-column justify-content-around" style='height: 100%;'>
                <h4><%= @current_room_chore.formatted_start_date %> - <%= @current_room_chore.formatted_end_date %></h4>
                <div class="this-week-info">
                  <% if @current_room_chore.status %>
                    <i class="fas fa-check mr-2" style="color:#1EDD88;"></i>
                  <% else %>
                    <i class="far fa-square mr-2" style="color:#FD1015;"></i>
                  <% end %>
                  <%= @current_room_chore.chore.name %>
                </div>
              </div>
            </div>

            <div>
              <div class="other-week border p-3 d-flex flex-column">
                <p class="mr-3"><strong>Next Week:</strong></p>
                <%= @next_room_chore.chore.name %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr>

  <div class="row justify-content-center my-3">
    <div class="col-12">
      <div class="card wide-container">
        <div class="card-header text-center">
          <h3>Amenities Booked</h3>
        </div>
        <div class="card-body">
          <% @amenities.each do |amenity| %>
          <br>
            <i class="<%= amenity.fa_class %>"></i> <%= amenity.name %>
            <% if amenity.availability == true %>
              <%= "available" %>
            <% else %>
              <%= "unavailable" %>
            <% end %>
          <% end %>
          <a href="amenities" class="stretched-link"></a>
        </div>
      </div>
    </div>
  </div>
</div>
