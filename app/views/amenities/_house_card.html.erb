<div style="display:flex; flex-direction: column" id="amenity-card-<%= amenity.id %>">
  <div type="button" class="btn amenity-card mr-3 border" data-toggle="modal" data-target="#amenityModal-<%= amenity.id %>">
    <p><%= image_tag amenity.fa_class, width: 100 %></p>
    <small><p><%= amenity.name %></small></p>
    <% if amenity.next_booking %>
    <p>Next Booked: <%= amenity.next_booking.start_date.strftime("%b %e, %l:%M %p") %><p>
    <% else  %>
      <p>Available</p>
    <% end %>
  </div>
<!-- Modal -->
<div class="modal fade" id="amenityModal-<%= amenity.id %>" tabindex="-1" role="dialog" aria-labelledby="amenityModal-<%=amenity.id%>Label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="amenityModal-<%=amenity.id%>Label">Book <%= amenity.name %> <%= image_tag amenity.fa_class , width: 50 %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [amenity, @booking], remote: true do |f| %>
          <%= f.input :start_date, as: :string, input_html: {class: "datepicker"} %>
          <%= f.input :end_date, as: :string, input_html: {class: "datepicker"} %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "Book", class:"btn btn-primary text-center"%>
        <% end %>
      </div>
    </div>
  </div>
</div>

</div>
