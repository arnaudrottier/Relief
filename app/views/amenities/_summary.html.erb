<div class="d-flex justify-content-center">
  <% @amenities.each do |amenity| %>
    <div style="display:flex; flex-direction: column">
      <div type="button" class="btn amenity-card mr-3" data-toggle="modal" data-target="#amenityModal-<%= amenity.id %>">
        <p><i class="<%= amenity.fa_class %>"></i></p>
        <small><%= amenity.name %></small>
      </div>
      <% current_user.future_bookings(amenity).each do |booking| %>
        <% if booking.formatted_start_date == booking.formatted_end_date %>
      <small><%=  booking.formatted_start_date %></small>
      <small><%=  booking.formatted_start_time %> - <%=  booking.formatted_end_time %></small>
        <% else %>
      <small><%=  booking.formatted_start_date %> - <%=  booking.formatted_end_date %> </small>
      <small><%=  booking.formatted_start_time %> - <%=  booking.formatted_end_time %></small>
        <% end %>
      <% end %>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="amenityModal-<%= amenity.id %>" tabindex="-1" role="dialog" aria-labelledby="amenityModal-<%=amenity.id%>Label" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="amenityModal-<%=amenity.id%>Label">Book <%= amenity.name %> <i class="<%= amenity.fa_class %>"></i></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= simple_form_for [amenity, @booking] do |f| %>
              <%= f.input :start_date, as: :string, input_html: {class: "datepicker"} %>
              <%= f.input :end_date, as: :string, input_html: {class: "datepicker"} %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <%= f.submit "Book", class:"btn btn-primary text-center"%>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  <% end %>
</div>

