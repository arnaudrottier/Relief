function refreshCard(innerHTML) {
  var card = document.querySelector(`#amenity-card-${<%= @amenity.id %>}`);
  card.querySelector(".modal-header button").click();
  card.innerHTML = innerHTML;
}

<% if @booking.errors.any? %>
  refreshCard("<%= j render 'amenities/house_card', amenity: @amenity %>");
<% else %>
  refreshCard("<%= j render 'amenities/house_card', amenity: @amenity %>");
<% end %>
