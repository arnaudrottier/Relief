<div class="d-flex aling-content-between" >

  <div class="card-profile-avatar">
    <div class="d-flex justify-content-center mt-5"><a><%= cl_image_tag(@user.image.key, :gravity => :face, class: :avatarlarge ) %></a></div>
    <div class="d-flex justify-content-center">
    <div class="align-self-end pt-2"><h1 style="color: #1871BF;"><%= @user.first_name %></h1></div>
      <% if @user == current_user %>
        <%= link_to edit_user_path do %>
          <i class="fas fa-pencil-alt fa-1x ml-2"></i>
        <% end %>
      <% end %>
    </div>
      <div class="d-flex justify-content-center">
        <a class="card-key-icon "><%= image_tag "room-key.png", alt: "alttext", class: "card-key-icon"  %></a>
        <p class="align-self-end my-3" style="font-size: 25px;"><%= @user.room.number %> | Points: <%= @user.points %></p>

      </div>
      <div class="card-contact-profile">
      <div class="card-meguro-profile border-top border-bottom">
        <p class="text-center"style="font-size: 20px; margin: 0;">At Meguro Mansion since: </p>
        <p class="text-center"style="font-size: 20px;"> <%= @user.formatted_created_day %> </p>
      </div>
      <div class="d-flex justify-content-center mt-4" style="color: gray;">
        <i class="fas fa-envelope fa-2x"></i>
        <p style="margin-bottom: 0;" class="align-self-end">E-mail: <%= @user.email %></p>
      </div>

      </div>
  </div>
    <div class="card-profile-right" style="background-color: white;">
      <h3 class="card-amenity-profile mb-4">About me</h3>
      <div class="card-bio">
        <p style="color: gray;"><%= @user.bio %></p>
      </div>
        <div style="margin-top: 50px; width: 600px;margin-left: 80px;"></div>
        <div>
        <h3 class="card-amenity-profile">Booked Amenities</h3>
        <div class="amenity-grid-in-profile container">
          <% @user.bookings.each do |booking| %>
              <div class="amenity-card">
              <p class="d-flex justify-content-center mt-3"><%= image_tag booking.amenity.fa_class, width: 50 %></p>
              <small><p class="d-flex justify-content-center"><%= booking.amenity.name %></small></p>
              </div>
              <div>
              <p class="booking-profile"style="margin-bottom: 0;"><i class="fas fa-calendar-day"></i> <%= booking.formatted_start_date %> to <%= booking.formatted_end_date %></p>
              <p class="booking-profile border-bottom"style="margin-bottom: 0;"><i class="far fa-clock align-self-end"></i><%= booking.formatted_start_time %> - <%= booking.formatted_end_time %></p>
              </div>
          <% end %>

        </div>






    </div>
  </div>
</div>

