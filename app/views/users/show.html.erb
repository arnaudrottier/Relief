<div class="d-flex aling-content-between" >

  <div class="card-profile-avatar">
    <div class="d-flex justify-content-center" style="padding-top: 70px;font-size: 20px;"><p style="margin: 0;">Current points: <%= @user.points %></p></div>
    <div class="d-flex justify-content-center" style="font-size: 25px;"> <i class="fas fa-star"></i><i class="far fa-star"></i></div>
    <div class="d-flex justify-content-center"><a><%= cl_image_tag(@user.image.key, :gravity => :face, class: :avatarlarge ) %></a></div>
    <div class="d-flex justify-content-center">
    <div class="align-self-end pt-2"><h1><%= @user.first_name %></h1></div>
      <% if @user == current_user %>
        <%= link_to edit_user_path do %>
          <i class="fas fa-pencil-alt fa-1x ml-2"></i>
        <% end %>
      <% end %>
    </div>
      <div class="d-flex justify-content-center">
        <a class="card-key-icon "><%= image_tag "room-key.png", alt: "alttext", class: "card-key-icon"  %></a>
        <p class="align-self-end my-3" style="font-size: 25px;"><%= @user.room.number %></p>
      </div>
      <div class="card-meguro-profile border-top border-bottom my-3">
        <p class="d-flex justify-content-center" style="font-size: 20px; margin: 0;">At Meguro Mansion since: </p>
        <p class="d-flex justify-content-center" style="font-size: 20px;"> <%= @user.formatted_created_day %> </p>
      </div>
  </div>
    <div class="card-profile-right" style="background-color: white;">
      <h2 class="d-flex justify-content-center my-3" style="padding-top: 55px;padding-bottom: 20px; text-decoration: underline;" style="font-size: 20px;">About me</h2>
      <div class="card-bio">
        <p style="color: gray;"><%= @user.bio %></p>
      </div>
      <div class="border-bottom" style="margin-top: 40px; width: 600px;margin-left: 80px;"></div>
      <h2 class="d-flex justify-content-center my-3" style="padding-top: 5px; text-decoration: underline;">Contact</h2>
      <i class="fas fa-envelope fa-2x d-flex justify-content-center pt-3"  style="color: gray;"></i><p class="d-flex justify-content-center" style="color: gray;">E-mail: <%= @user.email %></p>
        <div class="border-bottom" style="margin-top: 50px; width: 600px;margin-left: 80px;"></div>
        <div class="d-flex justify-content-center">
          <h3 class="card-amenity-profile">Booked Amenities</h3>
        </div>
    </div>
  </div>
</div>

