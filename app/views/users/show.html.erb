<h1 class="d-flex justify-content-center mt-3"><%= @user.first_name %></h1>
  <% if @user.image.attached? %>
  <div class="d-flex justify-content-center">
    <div class="scene scene--card">
      <div class="card-profile">
        <div class="card__face card__face--front"><%= cl_image_tag(@user.image.key, :gravity => :face, class: :avatarlarge ) %></div>
        <div class="card__face card__face--back"><h1>Room</h1><p><%= @user.room.number %></p></div>
      </div>
    </div>
  </div>
  <% else %>
  <div class="d-flex justify-content-center">
     <div class="scene scene--card">
      <div class="card-profile">
        <div class="card__face card__face--front"> <i class="fas fa-user-circle"></i></div>
        <div class="card__face card__face--back"><h1>Room</h1><p><%= @user.room.number %></p></div>
      </div>
    </div>
  </div>
  <% end %>
  <h2 class="d-flex justify-content-center mt-3"> Current chore points: <%= @user.points %></h2>
  <div class="row d-flex justify-content-center">
    <p><%= @user.bio %></p>
  </div>


