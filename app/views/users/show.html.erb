<div class="d-flex aling-content-between">
  <div class="card-profile-avatar position-sticky">
    <div class="d-flex justify-content-center" style="padding-top: 70px;font-size: 25px;"><p style="margin: 0;">Total 200pts</p></div>
    <div class="d-flex justify-content-center" style="font-size: 25px;"> <i class="fas fa-star"></i><i class="far fa-star"></i></div>
    <div class="d-flex justify-content-center"><a><%= cl_image_tag(@user.image.key, :gravity => :face, class: :avatarlarge ) %></a></div>
    <div class="d-flex justify-content-center">
    <div class="align-self-end pt-2"><h1><%= @user.first_name %></h1></div>
      <% if @user == current_user %>
        <%= link_to edit_user_path do %>
          <i class="fas fa-pencil-alt fa-1x ml-2"></i>
        <% end %>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <a class="card-key-icon "><%= image_tag "room-key.png", alt: "alttext", class: "card-key-icon"  %></a>
      <p class="align-self-end my-3" style="font-size: 25px;"><%= @user.room.number %></p>
    </div>
      <p class="d-flex justify-content-center my-3" style="font-size: 25px;"><%= @user.created_at %></p>
    </div>
      <div class="card-profile-right" style="background-color: white;">
        <h2 class="d-flex justify-content-center my-3" style="padding-top: 55px; text-decoration: underline;">About me</h2>
        <div class="card-bio m-4">
          <p><%= @user.bio %></p>
        </div>
        <h2 class="d-flex justify-content-center my-3" style="padding-top: 5px; text-decoration: underline;">Contact</h2>
        <i class="fas fa-envelope fa-2x d-flex justify-content-center pt-3"></i><p class="d-flex justify-content-center">E-mail: <%= @user.email %></p>
        <div class="d-flex justify-content-center">
          <h3 class="card-amenity-profile">Booked Amenities</h3>
        </div>
        <div>
          <% @amenities.each do |amenity| %>
          <% @user.future_bookings(amenity).each do |booking| %>
            <% if booking.formatted_start_date == booking.formatted_end_date %>
              <p><%=  booking.formatted_start_date %></p>
              <p><%=  booking.formatted_start_time %> - <%=  booking.formatted_end_time %></p>
            <% else %>
              <p><%=  booking.formatted_start_date %> - <%=  booking.formatted_end_date %> </p>
              <p><%=  booking.formatted_start_time %> - <%=  booking.formatted_end_time %></p>
            <% end %>
          <% end %>
          <% end %>
        </div>


       </div>
    </div>
</div>

